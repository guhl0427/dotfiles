{
  "editor.fontFamily": "Fira Code, Consolas, 'Courier New', monospace, MesloLGM Nerd Font",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "selection",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.insertMode": "replace",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.linkedEditing": true,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.accessibilitySupport": "off",
  "editor.stickyScroll.enabled": true,
  "editor.minimap.enabled": true,
  
  "workbench.editor.enablePreview": false,
  "workbench.tree.enableStickyScroll": true,
  "workbench.list.smoothScrolling": true,
  "workbench.colorTheme": "Moegi Black",
  "workbench.colorCustomizations": {
    "[Moegi Black]": {
      // "activityBar.activeBackground": "#16a34a",
      "tab.activeBorder": "#16a34a",
      "button.background": "#166534",
      "button.hoverBackground": "#16a34a"
    }
  },
  
  "explorer.confirmDelete": false,
  "files.autoSave": "onWindowChange",
  "files.exclude": {
    "**/*.meta": true
  },
  
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.mergeEditor": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "todo-tree.general.tags": [
    "BUG",
    "OPTIMIZE",
    "FIXME",
    "TODO",
    "NOTE",
    "[ ]",
    "[x]"
  ],
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.highlights.backgroundColourScheme": [
    "#c21f30",
    "#fca104",
    "#ea517f",
    "#41ae3c",
    "#bbb5ac",
    "#51c4d3",
    "#e9ccd3"
  ],
  "todo-tree.highlights.foregroundColourScheme": [
    "#000"
  ],

  "gitlens.defaultGravatarsStyle": "mp",
  "gitlens.hovers.avatarSize": 40,
  "gitlens.views.commits.files.layout": "list",
  "gitlens.statusBar.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.views.repositories.files.layout": "tree",
  "gitlens.views.commits.avatars": false,
  "gitlens.views.scm.grouped.views": {
    "commits": false,
    "branches": false,
    "remotes": true,
    "stashes": false,
    "tags": false,
    "worktrees": true,
    "contributors": true,
    "fileHistory": false,
    "repositories": false,
    "searchAndCompare": true,
    "launchpad": true
  },
  "gitlens.launchpad.indicator.enabled": false,
  "gitlens.graph.minimap.enabled": false,
  "gitlens.views.commitDetails.files.layout": "tree",
  
  "window.menuBarVisibility": "compact",
}